{
  "manifest_version": 2,

  "name": "2witter",
  "version": "0.0.6",
  "description": "2witter doubles Twitter's character limit of 140. Tweet 280 characters at a time for your 2witter-using friends to read!",

  "icons": {
    "128" : "icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "css": [],
      "js": ["jquery-2.0.3.min.js", "jquery-2.0.3.js", "contentscript.js"],
      "run_at": "document_end"
    }
  ],

  "background": { "page": "background.html" },
  "permissions": [ ],

  "web_accessible_resources": [ "jquery-2.0.3.js", "jquery-2.0.3.min.js", "jquery-2.0.3.min.map", "contentscript.js" ]
}
